// using objects
const employee = [
  {
    emp1: "John",
    amount: 500,
    
  },
  {
    emp2: "peter",
    amount: 350,
   
  },
  {
    emp3: "mark",
    amount: 650,
   
  }
]

const totalSalary = employee

.reduce(function (total, employee){
  return (total + employee.amount);
}, 0)
console.log(`the total salary we paid the employees is:  ${totalSalary}`)







  
    




      





