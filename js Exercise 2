// Arrow Function Using Array [callback and  foreach functions]

let movies = ['John Carter','GOT', 'Spider-Man','Iron-Man'];
const myMovies = (movie, index) => {
  console.log(`at index ${index} - the movie is ${movie}`)
}
movies.forEach(myMovies);



